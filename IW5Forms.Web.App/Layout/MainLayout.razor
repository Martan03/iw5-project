@using IW5Forms.Web.App
@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true"/>
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
        <MudAppBar Elevation="4">
        <MudImage Src="logo.png" Style="width: 200px;" Alt="Logo" />
        <MudSpacer />
        <MudNavLink Href="/" Match="NavLinkMatch.All">HOME</MudNavLink>
        <MudNavLink Href="/forms" Match="NavLinkMatch.All">FORMS</MudNavLink>
        <MudNavLink Href="/forms" Match="NavLinkMatch.All">QUESTIONS</MudNavLink>
        <MudNavLink Href="/users" Match="NavLinkMatch.All">MANAGE USERS</MudNavLink>
        <Login/>

        <MudIconButton Href="authentication/login" Icon="@Icons.Material.Outlined.Person" Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Medium" Target="_blank"/>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
